@using umbraco.MacroEngines
@inherits DynamicNodeContext
@{
    dynamic[] ancestors = Model.AncestorsOrSelf().ToArray();
    string[] names = ancestors.Where(x => x.UmbracoNaviHide != true && x.Level > 1).Select(x => x.Name).Cast<string>().ToArray();
    @ancestors.First().SiteName
    if (@Model.Level > 1)
    {
        @Html.Raw(" - ") @string.Join(" - ", names)
    }
}
